<AnchorPane prefHeight="600.0" prefWidth="330.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConfirmOrderFrameController">
   <children>
      <ListView layoutX="600.0" prefHeight="500.0" prefWidth="330.0" />
      <VBox fx:id="vBoxCart" layoutX="600.0" layoutY="29.0" prefHeight="471.0" prefWidth="330.0">
         <children>
            <Pane fx:id="paneLineCart" layoutY="50.0" prefHeight="43.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="imgProductCart" fitHeight="31.0" fitWidth="36.0" layoutX="6.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblProductNameCart" layoutX="64.0" layoutY="11.0" text="product name" />
                  <Label fx:id="lblQuantityCart" layoutX="177.0" layoutY="11.0" text="quantity" />
                  <Label fx:id="lblProductPriceCart" layoutX="253.0" layoutY="11.0" text="price" />
               </children>
            </Pane>
         </children>
      </VBox>
      <Button fx:id="btnConfirmOrder" layoutX="843.0" layoutY="561.0" mnemonicParsing="false" onAction="#confirmOrder" style="-fx-background-color: green;" text="Confirm">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Label layoutX="788.0" layoutY="510.0" text="Total:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblTotalPrice" layoutX="851.0" layoutY="511.0" text="price $$$">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="609.0" layoutY="4.0" text="Invoice:">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Button fx:id="btnCancelOrder" layoutX="618.0" layoutY="561.0" mnemonicParsing="false" onAction="#cancelOrder" style="-fx-background-color: red;" text="Cancel Order">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
